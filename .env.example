# Environment Variables for BookMyBike
# Copy this file to .env.local and fill in your values

# ===========================================
# SUPABASE (Required)
# ===========================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service Role Key (Server-side only - NEVER expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===========================================
# SECURITY & MIGRATION (Required)
# ===========================================
# Secret for internal admin API gating (x-admin-secret header)
ADMIN_API_SECRET=your-strong-random-secret
# Secret for synthesizing migration passwords (replaces legacy key slice)
MIGRATION_PASSWORD_SECRET=another-strong-random-secret

# ===========================================
# DOMAIN CONFIGURATION
# ===========================================
# Root domain for subdomain routing (e.g., bookmy.bike)
NEXT_PUBLIC_ROOT_DOMAIN=localhost:3000

# ===========================================
# GOOGLE MAPS (Optional - for location features)
# ===========================================
NEXT_PUBLIC_GOOGLE_MAPS_KEY=your-google-maps-api-key

# ===========================================
# MSG91 (Optional - for OTP authentication)
# ===========================================
# Get these from: https://msg91.com/
# Get these from: https://msg91.com/
# MSG91_AUTH_KEY=your-msg91-auth-key
# MSG91_TEMPLATE_ID=your-msg91-template-id

# ===========================================
# FIREBASE (Optional - for Firestore import)
# ===========================================
# Path to a Firebase Admin SDK service account JSON file (server-side only)
FIREBASE_SERVICE_ACCOUNT_PATH=/absolute/path/to/serviceAccount.json

# ===========================================
# ANALYTICS (Optional - GA4, GTM, Clarity)
# ===========================================
# GTM Container ID (e.g., GTM-XXXXXXX)
NEXT_PUBLIC_GTM_ID=

# GA4 Measurement IDs (optional; used for dataLayer routing)
NEXT_PUBLIC_GA4_ID_PROD=
NEXT_PUBLIC_GA4_ID_PRELAUNCH=

# Microsoft Clarity Project ID
NEXT_PUBLIC_CLARITY_ID=

# ===========================================
# TRANSLATION (Optional - OpenAI)
# ===========================================
# OpenAI API key for translation sync
OPENAI_API_KEY=
# Optional: override model (default gpt-4o-mini)
OPENAI_TRANSLATION_MODEL=
# Translation provider override: openai | google
TRANSLATION_PROVIDER=
# Google Translate API key (for provider=google)
GOOGLE_TRANSLATE_API_KEY=

# ===========================================
# DEVELOPMENT
# ===========================================
# NODE_ENV is automatically set by Next.js
# NODE_ENV=development

# Superadmin OTP bypass (use only on dev/staging hosts)
# SUPERADMIN_DEV_BYPASS=true
# SUPERADMIN_DEV_BYPASS_HOSTS=dev.bookmy.bike,staging.bookmy.bike
